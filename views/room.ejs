<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script
      src="https://kit.fontawesome.com/3e6fbf06fe.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap"
      rel="stylesheet"
    />
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <title>Video-Chat app</title>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        
        <div class="main__videos">
          <div id="video-grid"></div>
        </div>

        <div class="main__controls">
          <div class="main__controls__blocks">
            <div class="main__controls__button">
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div class="main__controls__button">
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>

          <div class="main__controls__center">
            <div class="main__controls__button">
              <i class="fas fa-shield-alt"></i>
              <span>Security</span>
            </div>
            <div class="main__controls__button">
              <i class="fas fa-users"></i>              
              <span>Participants</span>
            </div>
            <div class="main__controls__button">
              <i class="fas fa-comments"></i>             
              <span>Chat</span>
            </div>
          </div>

          <div class="main__controls__right">
            <div class="main__controls__button">
              <i class="fas fa-door-open"></i>
              <span>Leave</span>
            </div>
        </div>
      </div>
     
      
    </div>
    
    
    
    <div class="main__right">
      <div class="main__header">
        <h6>Chat</h6>
      </div>

      <div class="main__chat__window">
        <ul class="messages">

        </ul>
      </div>


      <div class="main__message__container">
        <input type="text" id="chat__message" placeholder="type message here.....">
        <button id="input_message">Send</button>
      </div>
    </div>

    
    
  
   
    
  </body>
  <script src="script.js"></script>
</html>
